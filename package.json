{
  "name": "legacy-wallet",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "build:wasm": "npm run build -w @qsafe/wasm-dilithium && node -e \"require('fs').cpSync('packages/wasm-dilithium/dist/dilithium.js','demo/dilithium.js')\"",
    "dev": "npx http-server . -c-1 -p 5173 -o /demo/index.html",
    "dev:eth": "node -e \"require('fs').cpSync('eth.js','demo/eth.js',{force:true})\" && npx http-server . -c-1 -p 5173 -o /eth.html"
  },
  "dependencies": {
    "@dashlane/pqc-sign-falcon-512-node": "^1.0.0",
    "@noble/hashes": "^1.8.0",
    "@noble/post-quantum": "^0.4.1",
    "dotenv": "^16.5.0",
    "ethereumjs-util": "^7.1.5",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.14.1",
    "kyber-crystals": "^1.0.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-wasm": "^6.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.18",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "rollup": "^4.15.2",
    "ts-node": "^10.9.2"
  }
}
